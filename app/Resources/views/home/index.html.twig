                    Cras quis felis vel sem tristique dignissim. Sed sit amet luctus nisi.
                </section>

                <section id="hder">
                    <div id="wrapper-form">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                    </div>
                </section>
            </div>

        <footer>
        {% block footer %}
            <ul class="footer-home">
                <li><img src="{{ asset('img/logo.png') }}"/></li>
                <li><p><a href="#">Política de privacidad</a></p></li>
                <li><p><a href="#">Condiciones de uso</a></p></li>
                <li><p><a href="#">Política de cookies</a></p></li>
                <li><p><a href="#">Política de copyright</a></p></li>
            </ul>

            {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
                <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
                <script src="{{ asset('js/scripts.js') }}"></script>
            {% endblock %}
        {% endblock %}
        </footer>
        {% endblock %}
    </body>
</html>
