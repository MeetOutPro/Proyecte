<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MeetOUT - Home{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/hover-min.css') }}"/>
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="homepage">
        {% block body %}

            <header class="home-head">
                {% block header %}
                    <ul class="header-home">
                        <li><img src="{{ asset('img/logo.jpg') }}" alt="MeetOut logo"/></li>
                        <li><button type="button" class="hvr-shrink" id="b-isesion">Iniciar sesión</button></li>
                    </ul>

                {% endblock %}
            </header>

            <div class="content">
                <div></div>

            </div>

        <footer>
        {% block footer %}
            <ul class="footer-home">
                <li><img src="{{ asset('img/logo.jpg') }}"/></li>
                <li><p>Política de privacidad</p></li>
                <li><p>Condiciones de uso</p></li>
                <li><p>Política de cookies</p></li>
                <li><p>Política de copyright</p></li>
            </ul>

            {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
                <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
                <script src="{{ asset('js/scripts.js') }}"></script>
            {% endblock %}
        {% endblock %}
        </footer>
        {% endblock %}
    </body>
</html>
